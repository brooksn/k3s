{
	"linters": {
		"disable-all": true,
		"enable": [
			"govet",
			"revive",
			"goimports",
			"misspell",
			"gofmt"
		]
	},
	"run": {
		"skip-dirs": [
			"build",
			"contrib",
			"manifests",
			"package",
			"scripts",
			"vendor"
		],
		"skip-files": [
			"/zz_generated_"
		],
		"deadline": "5m"
	},
	"issues": {
		"exclude-rules": [
			{
				"linters": "typecheck",
				"text": "imported but not used"
			},
			{
				"linters": "typecheck",
				"text": "build constraints exclude all Go files"
			},
			{
				"linters": "revive",
				"text": "should have comment"
			},
			{
				"linters": "revive",
				"text": "exported"
			},
			{
				"linters": "revive",
				"text": "unused-parameter"
			},
			{
				"linters": "revive",
				"text": "dot-imports"
			},
			{
				"linters": "revive",
				"text": "empty-block"
			},
			{
				"linters": "revive",
				"text": "superfluous-else"
			},
			{
				"linters": "revive",
				"text": "indent-error-flow"
			},
			{
				"linters": "revive",
				"text": "redefines-builtin-id"
			},
			{
				"linters": "typecheck",
				"text": "undefined"
			}
		]
	}
}